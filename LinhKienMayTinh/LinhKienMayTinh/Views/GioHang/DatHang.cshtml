@model LinhKienMayTinh.Models.DONDATHANG

@{
    ViewBag.Title = "Đặt Hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="banner-top" style="background-color:#333;">
    <div class="container">
        <h3>Đơn Đặt Hàng</h3>
        <h4><a href="@Url.Action("Index", "TrangChu")">Trang Chủ</a><label>/</label>Đơn Đặt Hàng</h4>
        <div class="clearfix"> </div>
    </div>
</div>
<div style="margin-top:50px;"></div>
<div class="spec ">
    <h3>Đơn Đặt Hàng</h3>
    <div class="ser-t">
        <b></b>
        <span><i></i></span>
        <b class="line"></b>
    </div>
</div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="login">
        <div class="main-agileits">
            <div class="form-w3agile form1">
                <h3>Phiếu Đặt Hàng</h3>
                <hr />
                @if (ViewBag.DatHang != "Chúc mừng bạn đã đặt hàng thành công !")
                {
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div>
                        @Html.LabelFor(model => model.TENDAIDIEN, htmlAttributes: new { @class = "control-label col-md-4" })

                        <div class="col-md-8">
                            @Html.EditorFor(model => model.TENDAIDIEN, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.TENDAIDIEN, "", new { @class = "text-danger" })
                        </div>
                        <div class="clearfix"></div>
                    </div>

                    <div style="margin-top:20px;">
                        @Html.LabelFor(model => model.SDT, htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <div style="margin-top:20px;">
                        @Html.LabelFor(model => model.DIACHIGIAO, htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.DIACHIGIAO, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.DIACHIGIAO, "", new { @class = "text-danger" })
                        </div>
                        <div class="clearfix"></div>
                    </div>


                    <div style="margin-top:20px;">
                        <div class="col-md-offset-4 col-md-8">
                            <input type="submit" value="Đặt Hàng" class="btn btn-default" />
                        </div>
                        <div class="clearfix"></div>
                    </div>
                }
                else
                {
                    <p style="color:red;text-align:center;">@ViewBag.DatHang</p>
                    <p style="text-align:center;"><a href="@Url.Action("Index","TrangChu")">Quay Về Trang Chủ</a></p>
                }
            </div>
        </div>
    </div>
}
