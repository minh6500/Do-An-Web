@using PagedList;
@using PagedList.Mvc;
@using LinhKienMayTinh.Models;
@model PagedList.PagedList<SANPHAM>
@{
    ViewBag.Title = "Sản Phẩm Theo Loại";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="product">
    <div class="container">
        <div class="spec ">
            <h3>@ViewBag.Title</h3>
            <div class="ser-t">
                <b></b>
                <span><i></i></span>
                <b class="line"></b>
            </div>
        </div>
        <div class=" con-w3l agileinf">
            @foreach (var item in Model)
            {
                <div class="col-md-3 pro-1">
                    <div class="col-m">
                        <a href="/chi-tiet-san-pham/@item.URL-@item.MASP" data-toggle="modal" data-target="#myModal1" class="offer-img">
                            <img src="/images/@item.HINHANH" class="img-responsive" alt="">
                        </a>
                        <div class="mid-1">
                            <div class="women">
                                <h6><a href="/chi-tiet-san-pham/@item.URL-@item.MASP">@item.TENSP</a></h6>
                            </div>
                            <div class="mid-2">
                                <p>@*<label>$7.00</label>*@<em class="item_price">@item.DONGIA VNĐ</em></p>
                                <div class="block">
                                    <div class="starbox small ghosting"> </div>
                                </div>
                                <div class="clearfix"></div>
                            </div>
                            @using (Html.BeginForm("ThemGioHang", "GioHang", new { @id = @item.MASP, @strURL = Request.Url.ToString() }))
                            {
                            <div class="add">
                                <button class="btn btn-danger my-cart-btn my-cart-b" data-id="24" data-name="Wheat" data-summary="summary 24" data-price="6.00" data-quantity="1" data-image="images/of24.png">Đặt Mua</button>
                            </div>
                            }
                        </div>
                    </div>
                </div>
            }
            <div class="clearfix"></div>
        </div>
    </div>
</div>

<!--Tạo link liên kết các trang-->
<div style="text-align:center;">
    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
    <div class="MenuTrang">
        @Html.PagedListPager(Model, page => Url.Action("SPTheoLoai", "TrangChu", new { page = page }))
    </div>
</div>