@using LinhKienMayTinh.Models;
@model LinhKienMayTinh.Models.KHACHHANG
@{ var session = (KHACHHANG)Session["TaiKhoan"];}
@{
    ViewBag.Title = "Đổi Mật Khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="/Content/ThongTinTaiKhoan/screen.css" rel="stylesheet" type="text/css" media="all">
<link rel="stylesheet" href="/Content/ThongTinTaiKhoan/user.css" type="text/css">
<link media="all" type="text/css" rel="stylesheet" href="/Content/ThongTinTaiKhoan/space.css">



<div class="banner-top" style="background-color:#333;">
    <div class="container">
        <h3>Đổi Mật Khẩu</h3>
        <h4><a href="@Url.Action("Index","TrangChu")">Trang Chủ</a><label>/</label><a href="@Url.Action("ThongTinTaiKhoan","DangKyDangNhap")">Thông Tin Tài Khoản</a><label>/</label>Đổi Mật Khẩu</h4>
        <div class="clearfix"> </div>
    </div>
</div>
<div style="margin-top:50px;"></div>
<div class="spec ">
    <h3>Đổi Mật Khẩu</h3>
    <div class="ser-t">
        <b></b>
        <span><i></i></span>
        <b class="line"></b>
    </div>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.MAKH)


    <div id="main">
        <div class="middle">
            <div class="clanPanelB space" id="account_setting">
                <div class="bd">
                    @if (ViewBag.ChucMung == "Chúc Mừng Đã Thay Đổi Mật Khẩu Thành Công")
                    {
                        <p style="color:red; font-weight:bold;font-size:15px;text-align:center;margin-top:20px;margin-bottom:20px;">@ViewBag.ChucMung</p>
                        <p style="text-align:center;"><a href="@Url.Action("ThongTinTaiKhoan","DangKyDangNhap",new { id = session.MAKH })">Trở Về Trang Thông Tin Tài Khoản</a></p>
                    }
                    else
                    {
                        <table class="accSetting">
                            <tbody>

                           

                                <tr>
                                    <th width="112">Nhập Mật Khẩu Cũ :</th>
                                    <td>
                                        <input type="password" name="PASSWORD"/>
                                    </td>
                                    @ViewBag.ThongBao
                                </tr>

                                <tr>
                                    <th width="112">Nhập Mật Khẩu Mới :</th>
                                    <td>
                                        <input type="password" name="PASS"  />
                                    </td>
                                </tr>

                                <tr>
                                    <th width="112">Xác Nhận Mật Khẩu :</th>
                                    <td>
                                        <input type="password" name="PW" />
                                    </td>
                                </tr>
                                <tr>
                                    <th></th>
                                    <td>
                                        <input type="submit" value="Lưu Thay Đổi"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    }
                </div>
            </div>
        </div><!--end middle-->

        <div class="clearfix"></div>
    </div>
}






<style>
    .tsa_div_stat {
        float: left;
        height: 20px;
        padding-right: 2px;
        width: 15px;
        /* background:url("../images/space-sprites.png") no-repeat scroll 0 0 transparent; } */
        background: url("http://cdn.garenanow.com/webmain/static/space/images/space-sprites.png") no-repeat scroll 0 0 transparent;
    }

    .tsa_div_statP {
        background-position: 0 -283px;
    }

    .tsa_div_statF {
        background-position: -30px -283px;
    }

    .middle {
        width: 730px;
    }
    input[type="submit"]:hover {
                    background-color: #FAB005;
                    color: #fff;
                }

                input[type="submit"] {
                    border: none;
                    width: 100%;
                    height: 50px;
                    margin-top: 0.5em;
                    margin-bottom: 1em;
                    font-size: 1em;
                    color: #fff;
                    letter-spacing: 1px;
                    outline: none;
                    background: #029241;
                    transition: 0.5s all ease;
                    -webkit-transition: 0.5s all ease;
                    -moz-transition: 0.5s all ease;
                    -o-transition: 0.5s all ease;
                    -webkit-appearance: none;
                }
</style>
