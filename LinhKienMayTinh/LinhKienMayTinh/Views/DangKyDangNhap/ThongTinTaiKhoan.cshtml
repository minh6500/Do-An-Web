                        </tr>

                        <tr>
                            <th>@Html.DisplayNameFor(model => model.SDT) :</th>      
                            <td>@Html.DisplayFor(model => model.SDT)</td>
                            <td class="tr nowrap">

                                <p style="margin:0">
                                    <a href="@Url.Action("DoiSDT","DangKyDangNhap",new { id = session.MAKH})" target="_blank">Thay đổi</a>
                                </p>

                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div><!--end middle-->

    <div class="clearfix"></div>
</div>

