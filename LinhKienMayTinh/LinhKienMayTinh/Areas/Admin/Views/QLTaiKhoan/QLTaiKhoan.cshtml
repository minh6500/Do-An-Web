@using LinhKienMayTinh.Models
@using PagedList.Mvc
@using PagedList
@model PagedList.PagedList<KHACHHANG>

@{
    ViewBag.Title = "QLTaiKhoan";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Quản Lý Khách Hàng</h2>

<p>
    @Html.ActionLink("Thêm Tài Khoản Mới", "ThemTK")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().MAKH)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().TENKH)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().SDT)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().DIACHI)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().EMAIL)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().PASS)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().NGAYDANGKY)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MAKH)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TENKH)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SDT)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DIACHI)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EMAIL)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PASS)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NGAYDANGKY)
        </td>
        <td>
            @Html.ActionLink("Sửa", "SuaTK", new { iMAKH=item.MAKH }) |
            
            @Html.ActionLink("Xóa", "XoaTK", new { iMAKH=item.MAKH })
        </td>
    </tr>
}

</table>
<!--Tạo link liên kết các trang-->
Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount)
<div class="MenuTrang">
    @Html.PagedListPager(Model, page => Url.Action("QLTaiKhoan", "QLTaiKhoan", new { page = page }))
</div>