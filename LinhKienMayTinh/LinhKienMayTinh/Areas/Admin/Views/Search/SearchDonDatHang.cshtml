@using PagedList;
@using PagedList.Mvc;
@model PagedList.PagedList<LinhKienMayTinh.Models.DONDATHANG>
@{
    ViewBag.Title = "SearchDonDatHang";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Kết Quả Tìm Kiếm</h1>
    </div>
</div>
@using (Html.BeginForm("SearchSanPham", "Search", FormMethod.Post))
{
    <div class="input-group custom-search-form" style="width:25%;">
        <input type="text" name="txt_TimKiem" class="form-control" placeholder="Search...">
        <span class="input-group-btn">
            <button class="btn btn-default" type="submit">
                <i class="fa fa-search"></i>
            </button>
        </span>
    </div>
}
<p></p>
@if (ViewBag.ThongBao != "Không tìm thấy thông tin")
{
    <p style="color:red;font-size:20px;font-weight:bold">@ViewBag.ThongBao</p>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    @Html.ActionLink("Tạo mới", "Create")
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <div class="row">
                            <div class="col-sm-12">
                                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                    <thead>
                                        <tr>
                                            <th>
                                                @Html.DisplayNameFor(model => model.First().NGAYDAT)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.First().TENDAIDIEN)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.First().SDT)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.First().DIACHIGIAO)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.First().TINHTRANGTHANHTOAN)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.First().TINHTRANGGIAOHANG)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.First().KHACHHANG.TENKH)
                                            </th>
                                            
                                        </tr>
                                    </thead>
                                    @foreach (var item in Model)
                                    {
                                        <tbody>
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.NGAYDAT)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.TENDAIDIEN)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.SDT)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.DIACHIGIAO)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.TINHTRANGTHANHTOAN)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.TINHTRANGGIAOHANG)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.KHACHHANG.TENKH)
                                                </td>
                                                <td>
                                                    <a href="@Url.Action("Edit","DONDATHANGs", new { id = item.MAD })">Sửa</a> |
                                                    <a href="@Url.Action("Details","DONDATHANGs", new { id = item.MAD })">Chi Tiết</a> |
                                                    <a href="@Url.Action("Delete","DONDATHANGs", new { id = item.MAD })">Xóa</a> |
                                                </td>
                                            </tr>
                                        </tbody>
                                    }
                                </table>
                            </div>
                        </div>
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
    </div>

    <!--Tạo link liên kết các trang-->
    <p>Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount</p>
    <div>
        @Html.PagedListPager(Model, page => Url.Action("SearchDonDatHang", "Search", new { page = page , sTuKhoa = ViewBag.TuKhoa}))
    </div>
}
else
{
    <p style="color:red;font-size:20px;font-weight:bold">@ViewBag.ThongBao</p>
}


