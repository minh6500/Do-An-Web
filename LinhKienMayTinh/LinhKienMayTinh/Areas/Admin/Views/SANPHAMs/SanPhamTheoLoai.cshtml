@using PagedList;
@using PagedList.Mvc;
@model PagedList.PagedList<LinhKienMayTinh.Models.SANPHAM>

@{
    ViewBag.Title = "Sản Phẩm Theo Loại";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- Bootstrap Core CSS -->
<link href="~/Areas/Admin/Content/bower_components/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
<!-- MetisMenu CSS -->
<link href="~/Areas/Admin/Content/bower_components/metisMenu/dist/metisMenu.min.css" rel="stylesheet">
<!-- DataTables CSS -->
<link href="~/Areas/Admin/Content/bower_components/datatables-plugins/integration/bootstrap/3/dataTables.bootstrap.css" rel="stylesheet">
<!-- DataTables Responsive CSS -->
<link href="~/Areas/Admin/Content/bower_components/datatables-responsive/css/dataTables.responsive.css" rel="stylesheet">
<!-- Custom CSS -->
<link href="~/Areas/Admin/Content/dist/css/sb-admin-2.css" rel="stylesheet">
<!-- Custom Fonts -->
<link href="~/Areas/Admin/Content/bower_components/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
<!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
<!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
<!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
<![endif]-->


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Sản Phẩm Theo Loại</h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                @Html.ActionLink("Tạo mới", "Create")
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <div class="row">
                        <div class="col-sm-12">
                            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>@Html.DisplayNameFor(model => model.First().HINHANH)</th>
                                        <th>@Html.DisplayNameFor(model => model.First().TENSP)</th>
                                        <th>@Html.DisplayNameFor(model => model.First().MOTA)</th>
                                        <th>@Html.DisplayNameFor(model => model.First().NGAYCAPNHAT)</th>
                                        <th>@Html.DisplayNameFor(model => model.First().DONGIA)</th>
                                        <th>@Html.DisplayNameFor(model => model.First().KHUYENMAI.TENKM)</th>
                                        <th>@Html.DisplayNameFor(model => model.First().LOAISP.TENLOAI)</th>
                                        <th>@Html.DisplayNameFor(model => model.First().NSX.TENNSX)</th>
                                    </tr>
                                </thead>
                                @foreach (var item in Model)
                                {
                                    <tbody>
                                        <tr>
                                            <td>
                                                <img src="~/images/@Html.DisplayFor(modelItem => item.HINHANH)" class="img-responsive" />
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TENSP)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.MOTA)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.NGAYCAPNHAT)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.DONGIA)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.KHUYENMAI.TENKM)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.LOAISP.TENLOAI)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.NSX.TENNSX)
                                            </td>
                                            <td>
                                                @Html.ActionLink("Sửa", "Edit", new { id = item.MASP }) |
                                                @Html.ActionLink("Hiển Thị", "Details", new { id = item.MASP }) |
                                                @Html.ActionLink("Xóa", "Delete", new { id = item.MASP })
                                            </td>
                                        </tr>
                                    </tbody>
                                }
                            </table>
                        </div>
                    </div>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
</div>

<!--Tạo link liên kết các trang-->
Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount)
<div>
    @Html.PagedListPager(Model, page => Url.Action("SanPhamTheoLoai", "SANPHAMs", new { page = page }))
</div>

<!-- jQuery -->
<script src="~/Areas/Admin/Content/bower_components/jquery/dist/jquery.min.js"></script>
<!-- Bootstrap Core JavaScript -->
<script src="~/Areas/Admin/Content/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
<!-- Metis Menu Plugin JavaScript -->
<script src="~/Areas/Admin/Content/bower_components/metisMenu/dist/metisMenu.min.js"></script>
<!-- DataTables JavaScript -->
<script src="~/Areas/Admin/Content/bower_components/datatables/media/js/jquery.dataTables.min.js"></script>
<script src="~/Areas/Admin/Content/bower_components/datatables-plugins/integration/bootstrap/3/dataTables.bootstrap.min.js"></script>
<!-- Custom Theme JavaScript -->
<script src="~/Areas/Admin/Content/dist/js/sb-admin-2.js"></script>
<!-- Page-Level Demo Scripts - Tables - Use for reference -->
<script>
    $(document).ready(function() {
        $('#dataTables-example').DataTable({
                responsive: true
        });
    });
</script>