
@{
    ViewBag.Title = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Đăng Nhập Trang Quản Trị</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Innovative Login Form template Responsive, Login form web template,Flat Pricing tables,Flat Drop downs  Sign up Web Templates, Flat Web Templates, Login sign up Responsive web template, SmartPhone Compatible web template, free WebDesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!-- Custom Theme files -->
    <link href="/Areas/Admin/Content/Login/css/style.css" rel="stylesheet" type="text/css" media="all" />
    <!-- //Custom Theme files -->

    <!-- js -->
    <script src="/Areas/Admin/Content/Login/js/jquery.min.js"></script>
    <script src="/Areas/Admin/Content/Login/js/easyResponsiveTabs.js" type="text/javascript"></script>
    <script type="text/javascript">
		$(document).ready(function () {
			$('#horizontalTab').easyResponsiveTabs({
				type: 'default', //Types: default, vertical, accordion
				width: 'auto', //auto or any width like 600px
				fit: true   // 100% fit in a container
			});
		});
    </script>
    <!-- //js -->
</head>
<body>
    <!-- main -->
    <div class="main">
        <h1>Đăng Nhập Trang Quản Trị</h1>
        <div class="main-info">
            <div class="sap_tabs">
                <div id="horizontalTab" style="display: block; width: 100%; margin: 0px;">
                    <ul class="resp-tabs-list">
                        <li class="resp-tab-item" aria-controls="tab_item-0"><h2><span>Đăng Nhập</span></h2></li>
                        <li class="resp-tab-item" aria-controls="tab_item-1"><span>Đăng Ký</span></li>
                    </ul>
                    <div class="clear"> </div>
                    <div class="resp-tabs-container">
                        <div class="tab-1 resp-tab-content" aria-labelledby="tab_item-0">
                            <div class="agileits-login">
                                <p style="color:red;font-weight:bold;">@ViewBag.ThongBao</p>
                                @using(Html.BeginForm("Login","Login"))
                                {
                                    <input type="text" class="email" name="USERNAME" placeholder="Tài Khoản" required="" />
                                    <input type="password" class="password" name="PASS" placeholder="Mật Khẩu" required="" />
                                    <div class="wthree-text">
                                        <div class="clear"> </div>
                                    </div>
                                    <div class="w3ls-submit">
                                        <div class="submit-text">
                                            <input class="register" type="submit" value="Đăng Nhập">
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>

                        <div class="tab-1 resp-tab-content" aria-labelledby="tab_item-1">
                            <div class="login-top sign-top">
                                <div class="agileits-login">
                                    @using (Html.BeginForm("Register", "Login"))
                                    {
                                        <input type="text" name="USERNAME" placeholder="Tài Khoản" required="">
                                        <input type="password" class="password" name="PASS" placeholder="Mật Khẩu" required="" />
                                        <div class="w3ls-submit">
                                            <div class="submit-text">
                                                <input class="register" type="submit" value="Đăng Ký">
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                        
                    </div>
                </div>
                <div class="clear"> </div>
            </div>
        </div>
    </div>
    <!-- //main -->
</body>
</html>

